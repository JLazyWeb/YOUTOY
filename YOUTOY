            if (files.length < 3) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–≥—Ä—É–∑–∏—Ç–µ –º–∏–Ω–∏–º—É–º 3 —Ñ–æ—Ç–æ');
